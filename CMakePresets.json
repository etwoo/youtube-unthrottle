{
  "version": 6,
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "BUILD_TESTING": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "warnings": {
        "dev": true,
        "deprecated": true
      },
      "errors": {
        "dev": true,
        "deprecated": true
      }
    },
    {
      "name": "clang",
      "inherits": "default",
      "environment": {
        "CC": "clang",
        "CXX": "clang++"
      }
    },
    {
      "name": "coverage",
      "inherits": "clang",
      "cacheVariables": {
        "BUILD_COVERAGE": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "fuzzer",
      "inherits": "clang",
      "cacheVariables": {
        "BUILD_FUZZER": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": {
        "outputJUnitFile": "junit.xml"
      }
    }
  ]
}
